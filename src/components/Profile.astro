---
import { Icon } from "astro-icon/components";

const { data } = Astro.props;

type Link = {
	title: string;
	url: string;
	handle: string;
};

const splitTitle = data.title.split(" ");

---

<section class="space-y-8" transition:animate="fade">
	<h1 class="font-display text-[5rem] md:text-[7rem] leading-[0.85] max-w-[5ch]">
		{splitTitle.map((part: string, index: number) => (
			<span class={`inline-block motion-safe:opacity-0 motion-safe:animate-fade-up`} style={`animation-delay: calc(${index + 1} * 0.15s)`} data-index={index}>
				{part}
			</span>
		))}
	</h1>

	<hr class="border-t border-neutral-700 w-15 motion-safe:scale-x-0 motion-safe:animate-expand-right" style="animation-delay: 0.75s" />

	<div set:html={data.bio} class="motion-safe:opacity-0 motion-safe:animate-fade-up text-pretty" style="animation-delay: 0.85s" />

	<hr class="border-t border-neutral-700 w-15 motion-safe:scale-x-0 motion-safe:animate-expand-right" style="animation-delay: 1.3s" />

	<ul>
		{data.links.map((link: Link, index: number) => (
			<li>
				<a href={link.url} data-site={link.handle} target="_blank" class="relative inline-flex items-center gap-1 group hover:text-white motion-safe:opacity-0 motion-safe:animate-fade-up" style={`animation-delay: ${1.3 + index * 0.1}s`} rel="noopener noreferrer">
					{link.title}

					<span class="inline-block motion-safe:group-hover:animate-fly">
						<Icon name="material-symbols:arrow-outward" />
					</span>
				</a>
			</li>
		))}
	</ul>
</section>