---
const { data } = Astro.props;

type Project = {
	id: number;
	title: string;
	description: string;
	image_url: string;
	url: string;
};
---
<section>
	{data.map((project: Project) => (
		<article>
			<h2>{project.title}</h2>
			<p>{project.description}</p>
			{project.image_url && <img src={project.image_url} alt={project.title} />}
			<a href={`${project.url}`}>View Project</a>
		</article>
	))}
</section>