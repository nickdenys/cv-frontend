---
import Project from "./Project.astro";

const { className, data } = Astro.props;

const initialAnimationDelay = 2.2; // seconds

type Project = {
	id: number;
	title: string;
	description: string;
	image_url: string;
	url: string;
};
---
<section class={`space-y-6 md:pt-20 ${className}`}>
	<h2 class="text-xl opacity-0 animate-fade-in" style="animation-delay: 2s">A curated selection of projects</h2>

	<div class="space-y-6 flex flex-col items-start">
		{data.map((project: Project, index: number) => (
			<Project project={project} className={`opacity-0 animate-fade-up`} style={`animation-delay: ${initialAnimationDelay + index * 0.1}s`} />
		))}
	</div>
</section>